<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_list">

    <com.uits.baseproject.widget.CircleImageView
        android:id="@+id/imgAvatarPlayMusic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/icon_music"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNamePlayMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/music_name"
        android:textAlignment="center"
        android:textColor="#F01919"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgAvatarPlayMusic" />

    <TextView
        android:id="@+id/txtSingerPlayMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/singer"
        android:textColor="#1F2129"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNamePlayMusic" />

    <SeekBar
        android:id="@+id/seeBarPlayMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginTop="440dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnPlayPlayMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@null"
        android:contentDescription="@null"
        android:padding="10dp"
        android:src="@drawable/ic_play_arrow_white_48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seeBarPlayMusic" />

    <ImageButton
        android:id="@+id/btnPreviousPlayMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:contentDescription="@null"
        android:padding="10dp"
        android:src="@drawable/icon_previous"
        app:layout_constraintEnd_toStartOf="@+id/btnPlayPlayMusic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnPlayPlayMusic" />

    <ImageButton
        android:id="@+id/btnNextPlayMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@null"
        android:contentDescription="@null"
        android:padding="10dp"
        android:src="@drawable/icon_next"
        app:layout_constraintBottom_toBottomOf="@+id/btnPlayPlayMusic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnPlayPlayMusic"
        app:layout_constraintTop_toTopOf="@+id/btnPlayPlayMusic" />

    <ImageButton
        android:id="@+id/btnRepeatPlayMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/ic_repeat"
        app:layout_constraintBottom_toTopOf="@+id/txtTimeSum"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/btnRepeatOnePlayMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/icon_repeat_one"
        app:layout_constraintBottom_toTopOf="@+id/txtTimeSum"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/btnUnShufflePlayMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:background="@null"
        android:contentDescription="@null"

        android:src="@drawable/unshuffle"
        app:layout_constraintBottom_toTopOf="@+id/txtTimeRun"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btnShufflePlayMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:background="@null"
        android:contentDescription="@null"
        android:src="@drawable/shuffle"
        app:layout_constraintBottom_toTopOf="@+id/txtTimeRun"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/txtTimeRun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/seeBarPlayMusic"
        app:layout_constraintStart_toStartOf="@+id/seeBarPlayMusic"
        tools:text="00:00" />

    <TextView
        android:id="@+id/txtTimeSum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/seeBarPlayMusic"
        app:layout_constraintEnd_toEndOf="@+id/seeBarPlayMusic"
        tools:text="00:00" />
</androidx.constraintlayout.widget.ConstraintLayout>